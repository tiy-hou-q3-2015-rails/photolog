<h1>New Photo!</h1>

<%= form_for @photo do |f| %>

  <div class="form-group <%= 'has-error' if @photo.errors[:url].any? %>">
    <%= f.label :url, class: 'control-label' %>
    <%= f.url_field :url, class: 'form-control' %>
    <p class="help-block"><%= @photo.errors[:url].join(", ") %></p>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>

<% end %>
