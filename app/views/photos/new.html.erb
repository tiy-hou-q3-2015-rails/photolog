<h1>New Photo!</h1>

<%= form_for @photo do |f| %>

  <div class="form-group <%= 'has-error' if @photo.errors[:image].any? %>">
    <%= f.label :image, class: 'control-label' %>
    <%= f.file_field :image %>
    <p class="help-block"><%= @photo.errors[:image].join(", ") %></p>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>

<% end %>
